<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment"
    android:background="@color/black_spotify"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Album Mới Nhất"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green_spotify"
        />
    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="210dp">

        <LinearLayout

            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="15dp"
                android:layout_width="170dp"
                android:layout_height="80dp"
                android:layout_marginBottom="10dp">

                <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnHot1"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:text=""
                    app:backgroundTint="@null" />
                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/lbAlbumName1"
                    android:layout_gravity="right"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/black_yt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="15dp"
                android:layout_width="170dp"
                android:layout_height="80dp" >

                <Button
                    android:layout_gravity="center_vertical"
                    android:id="@+id/btnHot2"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:text=""
                    app:backgroundTint="@null" />
                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/lbAlbumName2"
                    android:layout_gravity="right"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/black_yt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
             <androidx.cardview.widget.CardView
                 android:layout_marginEnd="20dp"
                 app:cardCornerRadius="15dp"
                 android:layout_width="170dp"
                 android:layout_height="80dp"
                 android:layout_marginBottom="10dp">

                 <Button
                     android:layout_gravity="center_vertical"
                     android:id="@+id/btnHot3"
                     android:layout_width="80dp"
                     android:layout_height="70dp"
                     android:text=""
                     app:backgroundTint="@null" />
                 <TextView
                     android:layout_marginTop="30dp"
                     android:id="@+id/lbAlbumName3"
                     android:layout_gravity="right"
                     android:text=""
                     android:textSize="13sp"
                     android:textColor="@color/black_yt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"/>
             </androidx.cardview.widget.CardView>

         </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/green_spotify"/>
    <TextView
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/green_spotify"
        android:textSize="18sp"
        android:text="Được đề xuất"/>


    <ListView
        android:id="@+id/lvSongs"
        android:layout_width="match_parent"
        android:layout_height="400dp" />


</LinearLayout>